---
layout: base-layout.njk
---
<article class="single-post">
  <header>
    <div class="post-meta">What I Learned On <time datetime="{{ date | dateIso }}">{{ date | dateReadable }}</time></div>
    <h1 class="post-title">{{ title }}</h1> 
  </header>
  {{ content | safe }}
</article>

{% if collections.post %}
  {% set previousPost = collections.post | getPreviousCollectionItem %}
  {% set nextPost = collections.post | getNextCollectionItem %}
  {% if nextPost or previousPost %}
    <ul class="postnav{% if nextPost %} hasNext{% endif %}{% if previousPost %} hasPrevious{% endif %}">
      {% if previousPost %}
        <li class="previous">
          <span class="label">Previous</span>
          <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
        </li>
      {% endif %}
      {% if nextPost %}
        <li class="next">
          <span class="label">Next</span>
          <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
        </li>
      {% endif %}
    </ul>
  {% endif %}
{% endif %}