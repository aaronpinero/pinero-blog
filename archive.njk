---
title: Previously
layout: base-layout.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
<div class="archive tymargins-off">
{% for post in posts %}
  {% if not loop.first %}
    <article>
      <h1 class="tyfont-size-h2"><a href="{{ post.url | url }}">{{ post.data.title }}</a></h1>
      <div><time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time></div>
      <p>{{ post.data.excerpt }}</p>
      <p><a href="{{ post.url | url }}" aria-label="Read more on {{ post.data.title }}">Read more</a></p>
    </article>
  {% endif %}
{% endfor %}
</div>