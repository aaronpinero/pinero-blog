---
title: Recently
layout: home-layout.njk
eleventyNavigation:
  key: Recently
  order: 0
---
{% set post = collections.post | reverse | first %}
<header>
  <div class="post-meta">What I Learned Recently</div>
  <h1 class="post-title">{{ post.data.title }}</h1>
</header>
{{ post.templateContent | safe }}

{% if collections.post %}
  {% set previousPost = collections.post | getPreviousCollectionItem(post) %}
  {% set nextPost = collections.post | getNextCollectionItem(post) %}
  {% if nextPost or previousPost %}
    <ul class="postnav{% if nextPost %} hasNext{% endif %}{% if previousPost %} hasPrevious{% endif %}">
      {% if previousPost %}
        <li class="previous">
          <span class="label">Previous</span>
          <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
        </li>
      {% endif %}
      {% if nextPost %}
        <li class="next">
          <span class="label">Next</span>
          <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
        </li>
      {% endif %}
    </ul>
  {% endif %}
{% endif %}